#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

case "$1" in
  start)
    stat_busy "Starting minecraft-server"
    if $(ck_daemon minecraft-server); then
      cd /srv/minecraft
      nohup /usr/bin/minecraft-server nogui &> /dev/null &
    fi
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon minecraft-server
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping minecraft-server"
    ck_daemon minecraft-server || ps ax | awk '/java.*minecraft-server/ {print $1}' | xargs kill
    rm_daemon minecraft-server
    stat_done
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  status)
    stat_busy 'Checking minecraft-server status'
    ck_status minecraft-server
    ;;
  *)
    echo "usage: $0 {start|stop|restart|status}"
esac
exit 0
