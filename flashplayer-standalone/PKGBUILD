pkgname=flashplayer-standalone
pkgver=10.2.159.1
pkgrel=1
pkgdesc="Macromedia standalone flash player (nonfree)"
url="http://www.adobe.com/support/flashplayer/downloads.html"
license="custom"
depends=('curl' 'gtk2' 'libxdamage' 'libxt' 'nss')
source=("http://download.macromedia.com/pub/flashplayer/updaters/10/flashplayer_10_sa.tar.gz"
        "gflashplayer.png"
        "flashplayer.desktop")
arch=('i686')
md5sums=('2545c1f5ed8e6ec4a8b6d3c70aff126e'
         'b6b218eacdb3bc2efae9292526a8cd05'
         'd2d004343a89d221a6afb8a8b725b016')
options=(!strip)

build() {
  cd "${srcdir}"
  install -D -m755 flashplayer "${pkgdir}/usr/bin/flashplayer" || return 1
  install -D -m644 flashplayer.desktop "${pkgdir}/usr/share/applications/flashplayer.desktop" || return 1
  install -D -m644 gflashplayer.png "${pkgdir}/usr/share/pixmaps/gflashplayer.png" || return 1
}
