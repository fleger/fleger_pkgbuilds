pkgbase=nwn
pkgname=('nwn')   # For the AUR
[ "x$CARCH" = "xi686" ] && pkgname=('nwn' 'nwn-original-resources' 'nwn-original-en')
[ "x$CARCH" = "xx86_64" ] && pkgname=('bin32-nwn' 'nwn-original-resources' 'nwn-original-en')
pkgver=1.69
pkgrel=2
arch=(i686 x86_64)
license=("custom")
