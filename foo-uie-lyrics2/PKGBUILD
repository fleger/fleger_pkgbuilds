pkgname=foo-uie-lyrics2
pkgver=0.4.6.15
pkgrel=2
pkgdesc="A lyrics display plugin for foobar2000."
arch=(any)
url="http://code.google.com/p/foo-display-lyrics/"
license=('LGPL')
depends=(foobar2000)
source=("http://foo-display-lyrics.googlecode.com/files/${pkgname//-/_}_${pkgver}.zip")
md5sums=('b07f2595b83ad1b8a348f5da40b25f91')

build() {
    install -D -m644 ${srcdir}/${pkgname//-/_}.dll ${pkgdir}/usr/share/foobar2000/components/${pkgname//-/_}.dll || return 1
}