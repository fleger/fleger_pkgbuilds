pkgname=nwnmod-git
pkgver=20110301
pkgrel=1
pkgdesc="Scripts to make a modular installation of Bioware's Neverwinter Nights."
arch=('any')
url="http://github.com/fleger/NWNMod"
license=('custom:WTFPL')
depends=('bash>=4.0' 'modfs-git')
makedepends=('git')

_gitroot="http://github.com/fleger/NWNMod.git"
_gitname="nwnmod"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  make PREFIX="/usr" CONFDIR="/etc/nwnmod.d" || return 1
}

package() {
  cd "$srcdir/$_gitname-build"
  make PREFIX="/usr" DESTDIR="$pkgdir/" CONFDIR="/etc/nwnmod.d" install || return 1
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

