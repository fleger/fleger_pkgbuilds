pkgname=nwnmod-cdkeys
pkgdesc="System-wide cd keys configuration for nwnmod"
pkgver=1.0
pkgrel=1
arch=(any)
depends=("nwnmod-client")
license=("custom")
url="http://nwn.bioware.com/downloads/linuxclient.html"
source=("50-system-cdkeys.conf"
        "nwncdkey.ini")
install="nwnmod-cdkeys.install"
backup=("opt/nwnmod-cdkeys/nwncdkey.ini")
md5sums=('3fe87647dfa40a737f02cbf731247b88'
         'dd409bb359bbf8bb3e1c24e3512a1ea9')

package() {
  cd "$srcdir"
  install -Dm644 "50-system-cdkeys.conf" "${pkgdir}/etc/nwnmod.d/50-system-cdkeys.conf"
  install -Dm644 "nwncdkey.ini" "${pkgdir}/opt/nwnmod-cdkeys/nwncdkey.ini"
}
